<nav class="navbar" role="navigation" aria-label="main navigation">
  <div class="navbar-brand">
    <a class="navbar-item" href="<%= root_path %>">
      <%
        web_logo_url = ENV['WEB_LOGO_URL'].blank? ? image_url('CW_OVP_LOGO_200x200.png') : ENV['WEB_LOGO_URL']
      %>
      <img src="<%= web_logo_url %>" height="28">
    </a>
    <a class="navbar-item" href="<%= root_path %>">
      <%= ENV['WEB_TITLE'] %>
    </a>

    <div class="navbar-burger burger" data-target="navbarExampleTransparentExample">
      <span></span>
      <span></span>
      <span></span>
    </div>
  </div>

  <div id="navbarExampleTransparentExample" class="navbar-menu">
    <div class="navbar-start">
      <%= link_to Encode.model_name, encodes_path, class: "navbar-item #{'is-active' if controller.controller_name == EncodesController.controller_name || current_page?(root_path)}" %>
      <%= link_to Webhook.model_name, webhooks_path, class: "navbar-item #{'is-active' if controller.controller_name == WebhooksController.controller_name }" %>
    </div>
    <div class="navbar-end">
      <div class="navbar-item">
        <div class="buttons">
          <% if user_signed_in? %>
            <%= link_to "Sidekiq", sidekiq_web_path, class: "button is-danger", target: "_blank" %>
            <%= link_to('Logout', destroy_user_session_path, method: :delete, class: "button is-primary") %>
            <%= link_to('Edit registration', edit_user_registration_path, class: "button is-light") %>
          <% else %>
            <%= link_to('Login', new_user_session_path, class: "is-primary") %>
            <%= link_to('Register', new_user_registration_path, class: "is-light") %>
          <% end %>
        </div>
      </div>
    </div>
